<div class="shared__carousel shared__carousel--hero-cta  shared__carousel--autoPlay">
		
		<!-- This class for background position should be authorable -->
		{% if page.herobanner and page.herobanner.length %}
<ul class="shared__carousel">
  {% for banner in page.herobanner %}

    {# safety check: only render correct component type #}

      <li class="shared__carousel__slide">

        {% if banner.fields.image and banner.fields.image.length %}
          <div class="shared__bg-position--bottom-right"
               style="background-image:url({{ banner.fields.image[0].fields.file.url }})">
        {% else %}
          <div class="shared__bg-position--bottom-right">
        {% endif %}

          <div class="shared__wrapper shared__carousel__slide--wrapper">
            <div class="shared__card shared__bg-color--white">
              <div class="shared__card__body shared__card__body--default shared__card--has-padding--large shared__rhythm--large">

                {% if banner.fields.title %}
                  <h2 class="shared__heading shared__heading--h2">
                    {{ banner.fields.title }}
                  </h2>
                {% endif %}

                {% if banner.fields.description %}
                  <p>{{ banner.fields.description }}</p>
                {% endif %}

                {% if banner.fields.button %}
                  <a class="shared__button shared__button--default shared__button--link"
                     href="#"
                     title="{{ banner.fields.button }}">
                    {{ banner.fields.button }}
                  </a>
                {% endif %}

              </div>
            </div>
          </div>
        </div>
      </li>

  {% endfor %}
</ul>
{% endif %}

		<nav class="shared__carousel__controls shared__flex" aria-label="Carousel navigation" tabindex="0">
			<button aria-label="previous slide" class="shared__carousel__button shared__carousel__button-prev" aria-controls="tns1" tabindex="-1" data-controls="prev">
				<svg class="shared__icon shared__icon--shared__arrow--chevron-small shared__icon--size-large shared__icon--color-royal shared__icon--rotate-180" aria-labelledby="title--shared__arrow--chevron-small" role="img" aria-hidden="true">
					<title id="title--shared__arrow--chevron-small" lang="en">Previous</title>
					<use xlink:href="/images/shared__arrow--chevron-small.svg"></use>
				</svg>
			</button>
			
			<button aria-label="next slide" class="shared__carousel__button shared__carousel__button-next" aria-controls="tns1" tabindex="-1" data-controls="next">
				<svg class="shared__icon shared__icon--shared__arrow--chevron-small shared__icon--size-large shared__icon--color-royal" aria-labelledby="title--shared__arrow--chevron-small" role="img" aria-hidden="true">
					<title id="title--shared__arrow--chevron-small" lang="en">Next</title>
					<use xlink:href="/images/shared__arrow--chevron-small.svg"></use>
				</svg>
			</button>
		</nav>
	</div>

	<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slides = document.querySelectorAll('.shared__carousel__slide');
    const prevBtn = document.querySelector('.shared__carousel__button-prev');
    const nextBtn = document.querySelector('.shared__carousel__button-next');

    if (!slides.length) return;

    let current = 0;
    slides[current].classList.add('is-active');

    function showSlide(index) {
      slides[current].classList.remove('is-active');
      current = (index + slides.length) % slides.length;
      slides[current].classList.add('is-active');
    }

    nextBtn.addEventListener('click', () => showSlide(current + 1));
    prevBtn.addEventListener('click', () => showSlide(current - 1));
  });
</script>